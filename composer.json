{
    "name": "intwp/wpmonorepo",
    "require": {
        "php": "^7.2",
        "symfony/dependency-injection": "^5.0",
        "symfony/http-kernel": "^5.0",
        "wordpress/gutenberg": "^13.0"
    },
    "autoload": {
        "psr-4": {
            "gusComponent\\ExtendSeparator\\": "blocks/extend-separator/src",
            "gusComponent\\RelatedPosts\\": "blocks/related-posts/src",
            "gusComponent\\GusCarousel\\": "blocks/gus-carousel/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "symplify/monorepo-builder": "^11.2",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "build": "wp-scripts build",
        "start": "wp-scripts start",
        "test": "phpunit"
    }
}
